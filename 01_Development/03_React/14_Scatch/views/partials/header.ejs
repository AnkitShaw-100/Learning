<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Scatch - Premium Shopping Experience</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@4.2.0/fonts/remixicon.css" rel="stylesheet" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="font-['helvetica_now_display'] bg-gray-50">
    <nav class="w-full fixed top-0 left-0 bg-white shadow-sm z-40 border-b border-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <a href="/" class="text-2xl font-bold text-blue-600">Scatch</a>
                </div>

                <!-- Navigation Links -->
                <div class="hidden md:flex items-center space-x-8">
                    <a href="/shop" class="text-gray-700 hover:text-blue-600 transition-colors">Shop</a>
                    <a href="/about" class="text-gray-700 hover:text-blue-600 transition-colors">About</a>
                    <a href="/contact" class="text-gray-700 hover:text-blue-600 transition-colors">Contact</a>
                </div>

                <!-- User Actions -->
                <div class="flex items-center space-x-4">
                    <!-- Cart -->
                    <a href="/cart" class="p-2 text-gray-700 hover:text-blue-600 transition-colors relative">
                        <i class="ri-shopping-cart-line text-xl"></i>
                        <span id="cartCount" class="absolute -top-1 -right-1 bg-red-500 text-white text-xs rounded-full w-5 h-5 flex items-center justify-center">0</span>
                    </a>

                    <!-- User Menu -->
                    <div class="relative">
                        <a href="/account" class="flex items-center space-x-2 text-gray-700 hover:text-blue-600 transition-colors">
                            <i class="ri-user-line text-xl"></i>
                            <span class="hidden sm:block">Account</span>
                        </a>
                    </div>

                    <!-- Logout -->
                    <a href="/logout" class="flex items-center space-x-2 text-gray-700 hover:text-red-600 transition-colors">
                        <i class="ri-logout-box-line text-xl"></i>
                        <span class="hidden sm:block">Logout</span>
                    </a>
                </div>

                <!-- Mobile menu button -->
                <div class="md:hidden">
                    <button class="p-2 text-gray-700">
                        <i class="ri-menu-line text-xl"></i>
                    </button>
                </div>
            </div>
        </div>
    </nav>

    <!-- Cart Count Script -->
    <script>
        // Function to update cart count
        async function updateCartCount() {
            try {
                const response = await fetch('/cart-count');
                if (response.ok) {
                    const data = await response.json();
                    document.getElementById('cartCount').textContent = data.cartCount || 0;
                }
            } catch (error) {
                console.log('Error fetching cart count:', error);
            }
        }

        // Update cart count on page load
        document.addEventListener('DOMContentLoaded', updateCartCount);
    </script>