<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Cards</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body class="bg-zinc-900 text-white min-h-screen p-6">
    <h1 class="text-3xl font-bold mb-8 text-center">User Cards</h1>

    <div class="flex flex-wrap gap-6 justify-center">
      <% users.forEach(function(user){ %>
      <div
        class="bg-zinc-800 p-5 rounded-2xl shadow-xl w-[280px] flex flex-col justify-between"
      >
        <div>
          <div class="w-full h-40 bg-zinc-700 rounded-lg mb-4 overflow-hidden">
            <img
              src="<%= user.image %>"
              alt="Profile Image"
              class="w-full h-full object-cover"
            />
          </div>

          <h2 class="text-xl font-semibold mb-2"><%= user.fullname %></h2>
          <p class="text-zinc-400 text-sm mb-1">📞 <%= user.phone %></p>
          <p class="text-zinc-400 text-sm mb-1">✉️ <%= user.email %></p>
          <p class="text-zinc-400 text-sm mb-4">👤 <%= user.username %></p>
        </div>
        <div class="flex justify-between">
          <a
            href="/edit/<%= user._id %>"
            class="text-sm px-3 py-1 rounded-md bg-red-600 hover:bg-red-700 transition"
          >
            Edit User
          </a>
          <a
            href="/delete/<%= user._id %>"
            class="text-sm px-3 py-1 rounded-md bg-red-600 hover:bg-red-700 transition"
          >
            Delete
          </a>
        </div>
      </div>
      <% }) %>
    </div>
  </body>
</html>
